{
  "info": {
    "name": "Strapi Listings API",
    "description": "Collection for testing Listings API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:1337",
      "type": "string"
    },
    {
      "key": "jwtToken",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    },
    {
      "key": "listingId",
      "value": "",
      "type": "string"
    },
    {
      "key": "propertyId",
      "value": "YOUR_PROPERTY_ID_HERE",
      "type": "string"
    },
    {
      "key": "unitId",
      "value": "YOUR_UNIT_ID_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login to get JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"your-email@example.com\",\n  \"password\": \"your-password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/local",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "local"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Get All Published Listings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/listings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings"],
              "query": [
                {
                  "key": "pagination[page]",
                  "value": "1"
                },
                {
                  "key": "pagination[pageSize]",
                  "value": "10"
                },
                {
                  "key": "sort",
                  "value": "price:asc"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Single Listing (Published)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/listings/{{listingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings", "{{listingId}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Authenticated Endpoints",
      "item": [
        {
          "name": "Create Listing (JSON)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"listing_type\": \"rent\",\n    \"price\": 1500000,\n    \"currency\": \"UGX\",\n    \"is_active\": true,\n    \"status\": \"draft\",\n    \"property\": {{propertyId}},\n    \"unit\": {{unitId}},\n    \"description\": \"Beautiful apartment for rent\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/listings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings"]
            }
          },
          "response": []
        },
        {
          "name": "Create Listing with Photos (Multipart)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "data",
                  "value": "{\n  \"listing_type\": \"sale\",\n  \"price\": 500000000,\n  \"currency\": \"UGX\",\n  \"is_active\": true,\n  \"status\": \"draft\",\n  \"property\": {{propertyId}},\n  \"description\": \"Luxury villa for sale with photos\"\n}",
                  "type": "text"
                },
                {
                  "key": "files.photos",
                  "type": "file",
                  "src": "/path/to/photo1.jpg"
                },
                {
                  "key": "files.photos",
                  "type": "file",
                  "src": "/path/to/photo2.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/listings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings"]
            }
          },
          "response": []
        },
        {
          "name": "Update Listing",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"price\": 1600000,\n    \"description\": \"Updated description\",\n    \"status\": \"published\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/listings/{{listingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings", "{{listingId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Update Listing with New Photos",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "data",
                  "value": "{\n  \"price\": 1700000,\n  \"description\": \"Updated with new photos\"\n}",
                  "type": "text"
                },
                {
                  "key": "files.photos",
                  "type": "file",
                  "src": "/path/to/new-photo.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/listings/{{listingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings", "{{listingId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Listing",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/listings/{{listingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings", "{{listingId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get My Listings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/listings/my-listings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings", "my-listings"],
              "query": [
                {
                  "key": "pagination[page]",
                  "value": "1"
                },
                {
                  "key": "pagination[pageSize]",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "published"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Test Scenarios",
      "item": [
        {
          "name": "Test Validation - Missing Required Fields",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"currency\": \"UGX\",\n    \"description\": \"Missing required fields\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/listings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings"]
            }
          },
          "response": []
        },
        {
          "name": "Test Unauthorized Access",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"listing_type\": \"rent\",\n    \"price\": 1500000\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/listings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings"]
            }
          },
          "response": []
        },
        {
          "name": "Test Update Other User's Listing",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"price\": 2000000\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/listings/OTHER_USER_LISTING_ID",
              "host": ["{{baseUrl}}"],
              "path": ["api", "listings", "OTHER_USER_LISTING_ID"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
